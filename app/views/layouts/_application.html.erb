<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<HTML lang="ja">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title><%= @content_for_header_title ||= "HOME" %> : unshiu </title>
  <%= javascript_include_tag :defaults %>
  <script type="text/javascript">
		$(document).ready(function(){
			$("#menu_list li").hover(
				function(){ $("ul", this).fadeIn("fast"); }, 
				function() { } 
			);
			if (document.all) {
				$("#menu_list li").hoverClass ("sfHover");
			}
		});
		
		$.fn.hoverClass = function(c) {
			return this.each(function(){
				$(this).hover( 
					function() { $(this).addClass(c);  },
					function() { $(this).removeClass(c); }
				);
			});
		};
	
		 $(document).ready(function() {
			$("#flash_error").hide();
			$("#flash_error").fadeIn(2000);
		 });
				
  </script>
  <%= yield :js %>

  <%= stylesheet_link_tag "blueprint/screen.css", :media => 'all' %>
  <%= stylesheet_link_tag "blueprint/ie.css", :media => 'all' %>
  <%= stylesheet_link_tag "styles.css", :media => 'all' %>

</head>

<BODY>
<div id="container" class="container showgrid">
	<div id="container_inner">
		<div id="header" class="span-24 append-bottom">
			<div id="header_inner">
				<div id="logo" class="span-5 first">
					<img src="/images/default/logo/logo-white.gif" width="195" height="67" border="0">
				</div><!--/logo-->
				<div id="menu_and_search_col" class="span-18 last">
					<div class="prepend-12">
						<div id="search_col" class="span-6">
							<div id="search_col_inner">
								<div id="search_list"  class="span-1 first" >
									<a href=""><img src="/images/default/icon/naviarrow_under.gif" alt=""></a>
								</div>
								<ul id="search_list" class="span-1 first hide">
									<li class="search_item">全体</li>
									<li class="search_item">日記</li>
									<li class="search_item">受信箱</li>
									<li class="search_item">コミュニケーション</li>
								</ul>
								<div id="search_inputfield" class="">
									<input type="text" size="" maxlength="" name="" value="全体から検索" class="span-4" >
								</div>
					
								<div class="clear"></div>
							</div><!--/search_col_inner-->
						</div><!--/search_col-->
					</div><!--/search_col_prepend-->
					<div>
						<div id="menu" class="span-18 prepend-top clearfix">
							<ul id="menu_list">
								<li id="menu_top"><a href="">トップ</a></li>
								<li id="menu_home"class="prepend-1"><a href="">ホーム</a></li>
								<li id="menu_mypage"><a href="">マイページ</a></li>
								<li id="menu_messagebox">
									<%= link_to '受信箱', :controller => 'msg_message', :action => 'index' %>
								</li>
								<li id="menu_communication">
									<a href=""><span>コミュニケーション</span><img src="/images/default/icon/naviarrow_under.gif" alt="option"></a>
									<ul>
										<li id="menu_friendsearch"><a href="">友達検索</a></li>
										<li id="menu_community"><a href="">コミュニティ</a></li>
									</ul>
								</li>
								<li id="menu_properties" class="prepend-1"><a href="">設定</a></li>
							</ul>
						</div><!--/menu-->
					</div><!--/menu_prepend-->

				</div><!--/menu_and_search_col-->
			</div><!--/header_inner-->
		</div><!--/header-->
		
		<div id="profiles_col" class="">
			<% if logged_in? %>
			<div id="profile_image_col" class="span-5 first prepend-top">
				<a href="/images/default/sample/n1065330509_3284.jpg">
					<%= safe_profile_view(current_base_user.base_profile, :large, { :width => "160", :height => "160" }) %>
				</a>
			</div><!--/profile_image_col-->

			<div id="profile_detail_col" class="span-19 clearfix last prepend-top">
				<div id="profile_detail_col_inner" class="">

					<div id="profile_name" class="profile_details">
						<%= link_to current_base_user.show_name, :controller => 'base_profile', :action=> 'show', :id => current_base_user.id %>
					</div><!--/profile_name-->
					<div id="profile_logtime"  class="profile_details">
						<%= login_status(current_base_user.latest_login) %>前にログアウトしました
					</div><!--/profile_logtime-->
					<div id="profile_shozaiti"  class="profile_details">
						<%= BaseProfile.area_kind_name(current_base_user.base_profile.try(:area)) %>在住
					</div><!--/profile_shozaiti-->
					<div id="profile_gender"    class="profile_details">
						<%= BaseProfile.sex_kind_name(current_base_user.base_profile.try(:sex)) %>
					</div><!--/profile_gender-->

					<div id="contact_send_message_col" class="prepend-top span-4">
						<a href="">メッセージを送る</a>
					</div><!--/contact_send_message_col-->

				</div><!--/profile_detail_col_inner-->
			</div><!--/profile_detail_col-->
			<% end %>
		</div><!--/profiles_col-->

		<div class="clear"></div>

		<div id="sub_menu" class="prepend-top">
			<ul id="sub_menu_list">
				<li class="span-4 "><a href=""><div class="submenu_inner sub_menu_on tab_on"><div class="sub_menu_title_col"><div class="sub_menu_title">更新情報</div></div><img src="/images/default/icon/updatehistory.gif" width="32" height="32" border="0"></div></a></li>
				<li class="span-4 "><a href=""><div class="submenu_inner sub_menu_off tab_off"><div class="sub_menu_title_col"><div class="sub_menu_title">プロフィール</div></div><img src="/images/default/icon/profile.gif" width="32" height="32" border="0"></div></a></li>
				<li class="span-4 ">
					<%= sub_tab_menu("日記", "diary", {:controller => :dia_entry, :action => :new})%>
				</li>
				<li class="span-4 ">
					<%= sub_tab_menu("写真", "photo", {:controller => :abm_album, :action => :index})%>
				</li>
				<li class="span-4 "><a href=""><div class="submenu_inner sub_menu_off tab_off"><div class="sub_menu_title_col"><div class="sub_menu_title">お気に入り</div></div><img src="/images/default/icon/favorite.gif" width="32" height="32" border="0"></div></a></li>
				<li class="span-2 "><a href=""><div class="submenu_inner sub_menu_off tab_off"><div class="sub_menu_title_col"><div class="sub_menu_title hide">その他機能を選択もしくはメニューに追加</div></div><img src="/images/default/icon/addmenu.gif" width="32" height="32" border="0" alt=""></div></a></li>
		</ul>
		</div><!--/sub_menu-->

		<br class="clear">
		
		<div id="contents" class="container">
			<div id="contents_inner" class="clearfix">
				<div id="main_contents" class="span-18 prepend-top  last">
					<div id="main_contents_inner">	
					
					<%= render 'common/flash_info' %>
		
					<%= yield  %>
					
					</div><!--/main_contents_inner-->
				</div><!--/main_contents-->
				
				<div id="side_contents" class="span-6 prepend-top last">
					<div id="side_contents_inner">
		
					<%= yield :sidemenu %>
		
					</div><!--/side_contents_inner-->
				</div><!--/side_contents-->
				<br class="clear">
			</div><!--/contents_inner-->
		</div><!--/contents-->
		
		<div id="footer">
			<div id="footer_inner">
			
			
			</div><!--/footer_inner-->
		</div><!--/footer-->
	</div><!--/container_inner-->
</div><!--/container-->
</BODY>
</HTML>
