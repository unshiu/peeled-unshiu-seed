production:
  adapter: mysql
  database: unshiu_production
  username: root
  password: root
  host: root
  socket : <%= socket %>
  encoding: utf8
  estraier:
    host: localhost
    user: admin
    password: admin
    port: 1978
    node: production
  master_database:
    adapter: mysql
    database: unshiu_production
    username: root
    password: root
    host: db_proxy
    port: 13306
    socket : <%= socket %>
